<section id="solr">
    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Solr</h3>
                </div>

                <div class="panel-body">
                    <div class="row form-group">
                        <div class="col-xs-12">
                            <label class="checkbox-inline">
                                <input type="checkbox" name="solr[install]" class="multiselect-grouped-tab"
                                       data-tab-target="solr-pill"
                                       {% if solr.install %}checked{% endif %} value="1" /> Install Solr
                            </label>

                            <p class="help-block">
                                Solr will be installed from official Maven repo.
                            </p>
                        </div>

                        <div class="col-xs-12">
                            <label for="solr-versions-displayer">Solr version</label>
                            <select id="solr-versions-displayer"
                                    class="form-control select-tag selectize"
                                    data-target-container="solr-versions"
                                    data-target-name="solr[versions]"
                                    name="solr[versions]"
                                >
                                {% for version in solr.versions %}
                                    <option value="{{ version }}">{{ version }}</option>
                                {% endfor %}
                            </select>

                            <p class="help-block">
                                You can choose which branch / tag of Solr to checkout.
                                See <a href="http://mvnrepository.com/artifact/org.apache.solr/solr-core" target="_blank">list</a>
                                for current versions.
                            </p>
                        </div>

                        <div class="col-xs-12">
                            <label for="solr-cores">Solr index cores</label>
                            <input id="solr-cores" name="solr[settings][cores]" class="form-control select-tags-user-input" value="dev,stage,prod">

                            <p class="help-block">
                                You can create any amount of index cores with any name, one per line.
                            </p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</section>
